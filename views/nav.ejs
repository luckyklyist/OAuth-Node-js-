<header class="text-gray-600 body-font">
    <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
        <a href="/" class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
            <img class="h-[5vh]" src="https://www.hbo.com/img/hbo-logo-blk.svg" alt="hbo logo" />
            <span class="ml-3 text-xl">Cast Scraper</span>
        </a>
        <nav class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center">
            <a href="#" class="mr-5 hover:text-gray-900" onclick="submitForm('Game of Thrones')">Game of Thrones</a>
            <a href="#" class="mr-5 hover:text-gray-900" onclick="submitForm('Euphoria')">Euphoria</a>
            <a href="#" class="mr-5 hover:text-gray-900" onclick="submitForm('The Last of Us')">The Last of Us</a>
            <a href="#" class="mr-5 hover:text-gray-900" onclick="submitForm('House of the Dragon')">House of the
                Dragon</a>

            <!-- Hidden form -->
            <form id="postForm" method="POST" style="display: none;">
                <input type="hidden" id="showNameInput" name="showName" value="">
            </form>

        </nav>
        <% if (authenticated) { %>
            <button class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0">
              <a href="/profile">Profile</a>
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </button>
          <% } else { %>
            <button class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0">
              <a href="/github/auth">Login with Github</a>
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </button>
          <% } %>
          


    </div>
</header>

<script>
    function submitForm(showName) {
        const form = document.getElementById('postForm');
        const input = document.getElementById('showNameInput');

        input.value = showName;
        form.submit();
    }
</script>